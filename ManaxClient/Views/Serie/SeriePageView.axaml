<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:login="clr-namespace:ManaxClient.ViewModels.Serie"
    xmlns:previews="clr-namespace:ManaxClient.Controls.Previews"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Serie.SeriePageView"
    x:DataType="login:SeriePageViewModel">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="24">
            
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="24">
                <Border Grid.Column="0" Classes="card" Padding="16">
                    <StackPanel Spacing="16" Width="180">
                        <Border CornerRadius="12" ClipToBounds="True">
                            <Image Source="{Binding Poster}"
                                  Width="150"
                                  Height="243"
                                  Stretch="UniformToFill"/>
                        </Border>
                        
                        <StackPanel
                            Orientation="Horizontal">
                            <Button Classes="secondary"
                                    IsVisible="{Binding Admin}"
                                    Command="{Binding ReplacePoster}"
                                    IsEnabled="{Binding !IsFilePickerOpen}"
                                    HorizontalAlignment="Stretch">
                                <TextBlock Text="ðŸ–¼ï¸"/>
                            </Button>
                        
                            <Button Classes="secondary"
                                    IsVisible="{Binding Admin}"
                                    Command="{Binding UpdateSerie}"
                                    IsEnabled="{Binding !IsFilePickerOpen}"
                                    HorizontalAlignment="Stretch">
                                <TextBlock Text="Changer"/>
                            </Button>
                        </StackPanel>
                        
                        <StackPanel Spacing="8" IsVisible="{Binding Admin}">
                            <TextBlock Text="Note de la sÃ©rie" FontWeight="Medium"/>
                            <ComboBox ItemsSource="{Binding Ranks}"
                                     SelectedItem="{Binding SelectedRank}"
                                     HorizontalAlignment="Stretch">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16">
                            <StackPanel Grid.Column="0" Spacing="8">
                                <Border Background="{StaticResource InfoBrush}"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Serie.Status}"
                                               Foreground="White"
                                               FontSize="12"
                                               FontWeight="Medium"/>
                                </Border>
                                
                                <TextBlock Text="{Binding Chapters.Count, StringFormat='{}{0} chapitre(s)'}"
                                           Foreground="{StaticResource SecondaryBrush}"/>
                            </StackPanel>
                            
                        </Grid>
                    </StackPanel>
                </Border>
                
                <StackPanel Grid.Column="1" Spacing="20">
                        <TextBlock Classes="title" Text="{Binding Serie.Title}"/>
                    
                    <Border Classes="card">
                        <TextBlock Text="{Binding Serie.Description}"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource DarkBrush}"/>
                    </Border>
                    
                    <Border Classes="card">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="subtitle" Text="Chapitres" Margin="0"/>
                            
                            <Border Background="{StaticResource LightBrush}" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   IsVisible="{Binding !Chapters.Count}">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ“–" FontSize="32"/>
                                    <TextBlock Text="Aucun chapitre disponible" 
                                              FontWeight="Medium"/>
                                    <TextBlock Text="Cette sÃ©rie ne contient pas encore de chapitres."
                                              FontSize="12"
                                              Foreground="{StaticResource SecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <ItemsControl ItemsSource="{Binding Chapters}" IsVisible="{Binding Chapters.Count}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                               Padding="8"
                                               CornerRadius="8"
                                               Margin="0,2">
                                            <Border.Styles>
                                                <Style Selector="Border:pointerover">
                                                    <Setter Property="Background" Value="#F8F9FA"/>
                                                </Style>
                                            </Border.Styles>
                                            <previews:ChapterPreview
                                                Command="{Binding $parent[UserControl].((login:SeriePageViewModel)DataContext).MoveToChapterPage}"
                                                CommandParameter="{Binding .}"
                                                Chapter="{Binding .}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" Spacing="4"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>