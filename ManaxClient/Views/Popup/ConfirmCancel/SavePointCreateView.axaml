<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:confirmCancel="clr-namespace:ManaxClient.ViewModels.Popup.ConfirmCancel"
    mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
    x:Class="ManaxClient.Views.Popup.ConfirmCancel.SavePointCreateView"
    x:DataType="confirmCancel:SavePointCreateViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="16" Margin="16">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
            <TextBlock Text="💾" FontSize="24" VerticalAlignment="Center"/>
            <StackPanel Spacing="4">
                <TextBlock
                    Text="Nouveau point de sauvegarde"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#212529"/>
                <TextBlock
                    Text="Définissez un répertoire de sauvegarde pour vos données"
                    FontSize="12"
                    Foreground="#6C757D"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="8">
            <TextBlock
                Text="Chemin de sauvegarde"
                FontWeight="Medium"
                Foreground="#495057"/>
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                <TextBox
                    Grid.Column="0"
                    Text="{Binding Path}"
                    Watermark="Entrez le chemin du répertoire..."
                    Padding="12"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#DEE2E6"
                    FontSize="14">
                    <TextBox.Styles>
                        <Style Selector="TextBox:pointerover">
                            <Setter Property="BorderBrush" Value="#007ACC"/>
                        </Style>
                        <Style Selector="TextBox:focus">
                            <Setter Property="BorderBrush" Value="#007ACC"/>
                        </Style>
                    </TextBox.Styles>
                </TextBox>
                <Button
                    Grid.Column="1"
                    Content="📁"
                    Padding="12"
                    CornerRadius="8"
                    Background="#F8F9FA"
                    BorderBrush="#DEE2E6"
                    BorderThickness="1">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#E9ECEF"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </StackPanel>

        <Border 
            Grid.Row="2"
            Background="#D1ECF1"
            BorderBrush="#17A2B8"
            BorderThickness="1"
            CornerRadius="8"
            Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="ℹ️" FontSize="14" VerticalAlignment="Top"/>
                <TextBlock
                    Text="Sélectionnez un répertoire accessible où les données de sauvegarde seront stockées."
                    TextWrapping="Wrap"
                    FontSize="12"
                    Foreground="#495057"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
