<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:page="clr-namespace:ManaxClient.ViewModels.Pages.Settings"
    xmlns:viewModels="clr-namespace:ManaxClient.ViewModels"
    xmlns:localization="clr-namespace:Jeek.Avalonia.Localization;assembly=Jeek.Avalonia.Localization"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Pages.Settings.SettingsServerPageView"
    x:DataType="page:SettingsServerPageViewModel"
    IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanReadServerSettings}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="24">

            <StackPanel Orientation="Vertical">
                <TextBlock Classes="title" Text="{localization:Localize SettingsServerPage.Title}" />
                <TextBlock Text="{localization:Localize SettingsServerPage.Subtitle}"
                           Foreground="{StaticResource SecondaryBrush}" />
            </StackPanel>

            <Border Classes="card">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Classes="primary"
                            IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanWriteSavePoints}"
                            Command="{Binding CreateSavePoint}"
                            Padding="24,12"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="💾" />
                            <TextBlock Text="{localization:Localize SettingsServerPage.AddSavePoint}" FontWeight="Medium" />
                        </StackPanel>
                    </Button>

                    <Button Classes="primary"
                            IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanWriteLibraries}"
                            Command="{Binding CreateLibrary}"
                            Padding="24,12"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="💾" />
                            <TextBlock Text="{localization:Localize SettingsServerPage.AddLibrary}" FontWeight="Medium" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <Border Classes="card">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="🖼️" FontSize="20" />
                        <TextBlock Classes="subtitle" Text="{localization:Localize SettingsServerPage.PosterConfig}" Margin="0" />
                    </StackPanel>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                          ColumnSpacing="16" RowSpacing="16">

                        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.PosterName}" FontWeight="Medium" />
                            <TextBox Text="{Binding Settings.PosterName}"
                                     Watermark="poster.jpg" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.ImageFormat}" FontWeight="Medium" />
                            <ComboBox SelectedItem="{Binding Settings.PosterFormat}"
                                      ItemsSource="{Binding AllImageFormats}"
                                      HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.Quality}" FontWeight="Medium" />
                            <NumericUpDown FormatString="0"
                                           Value="{Binding Settings.PosterQuality}"
                                           Maximum="100"
                                           Minimum="1" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.MaxWidth}" FontWeight="Medium" />
                            <NumericUpDown FormatString="0"
                                           Value="{Binding Settings.MaxPosterWidth}"
                                           Minimum="{Binding Settings.MinPosterWidth}" />
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="2" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.MinWidth}" FontWeight="Medium" />
                            <NumericUpDown FormatString="0"
                                           Value="{Binding Settings.MinPosterWidth}"
                                           Maximum="{Binding Settings.MaxPosterWidth}"
                                           Minimum="1" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Classes="card">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="📖" FontSize="20" />
                        <TextBlock Classes="subtitle" Text="{localization:Localize SettingsServerPage.ChapterConfig}" Margin="0" />
                    </StackPanel>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto"
                          ColumnSpacing="16" RowSpacing="16">

                        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.MaxPageWidth}" FontWeight="Medium" />
                            <NumericUpDown FormatString="0"
                                           Value="{Binding Settings.MaxChapterWidth}"
                                           Minimum="{Binding Settings.MinChapterWidth}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.MinPageWidth}" FontWeight="Medium" />
                            <NumericUpDown Value="{Binding Settings.MinChapterWidth}"
                                           Maximum="{Binding Settings.MaxChapterWidth}"
                                           Minimum="1" />
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.ImageFormat}" FontWeight="Medium" />
                            <ComboBox SelectedItem="{Binding Settings.ImageFormat}"
                                      ItemsSource="{Binding AllImageFormats}"
                                      HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.ArchiveFormat}" FontWeight="Medium" />
                            <ComboBox SelectedItem="{Binding Settings.ArchiveFormat}"
                                      ItemsSource="{Binding AllArchiveFormats}"
                                      HorizontalAlignment="Stretch" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Classes="card">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="📚" FontSize="20" />
                        <TextBlock Classes="subtitle" Text="{localization:Localize SettingsServerPage.SeriesConfig}" Margin="0" />
                    </StackPanel>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto"
                          ColumnSpacing="16" RowSpacing="16">

                        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.MaxDescriptionLength}" FontWeight="Medium" />
                            <NumericUpDown FormatString="0"
                                           Value="{Binding Settings.MaxDescriptionLength}"
                                           Minimum="{Binding Settings.MinDescriptionLength}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="6">
                            <TextBlock Text="{localization:Localize SettingsServerPage.MinDescriptionLength}" FontWeight="Medium" />
                            <NumericUpDown FormatString="0"
                                           Value="{Binding Settings.MinDescriptionLength}"
                                           Maximum="{Binding Settings.MaxDescriptionLength}"
                                           Minimum="1" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid ColumnDefinitions="*,Auto,Auto">

                <Border Grid.Column="0"
                        Background="{DynamicResource Background2}"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{localization:Localize SettingsServerPage.TipTitle}"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource InfoBrush}" />
                        <TextBlock
                            Text="{localization:Localize SettingsServerPage.TipMessage}"
                            TextWrapping="Wrap"
                            FontSize="12"
                            Foreground="{StaticResource SecondaryBrush}" />
                    </StackPanel>
                </Border>

                <Button Grid.Column="2"
                        IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanWriteServerSettings}"
                        Classes="primary"
                        IsEnabled="{Binding Settings.IsValid}"
                        Command="{Binding Update}"
                        Padding="24,12"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="💾" />
                        <TextBlock Text="{localization:Localize SettingsServerPage.SaveButton}" FontWeight="Medium" />
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </ScrollViewer>

</UserControl>