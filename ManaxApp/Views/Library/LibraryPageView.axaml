<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:login="clr-namespace:ManaxApp.ViewModels.Library"
    xmlns:controls="clr-namespace:ManaxApp.Controls"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxApp.Views.Library.LibraryPageView"
    x:DataType="login:LibraryPageViewModel">
    <DockPanel>
        <StackPanel
            DockPanel.Dock="Top"
            Orientation="Vertical">
            <Label
                Content="{Binding Library.Name}" />
            <Button
                Command="{Binding UploadSerie}">
                Upload
            </Button>
        </StackPanel>
        <ItemsControl
            ItemsSource="{Binding Series}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <controls:SeriePreview
                        Serie="{Binding .}"
                        Command="{Binding $parent[UserControl].((login:LibraryPageViewModel)DataContext).MoveToSeriePage}"
                        CommandParameter="{Binding .}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemSpacing="5" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </DockPanel>
</UserControl>