<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:login="clr-namespace:ManaxClient.ViewModels.Serie"
    xmlns:previews="clr-namespace:ManaxClient.Controls.Previews"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Serie.SeriePageView"
    x:DataType="login:SeriePageViewModel">
    <DockPanel>
        <StackPanel
            DockPanel.Dock="Top"
            Orientation="Vertical">
            <Image
                Source="{Binding Poster}"
                Width="120"
                Height="194" />
            <Button
                IsVisible="{Binding Admin}"
                Command="{Binding ReplacePoster}"
                IsEnabled="{Binding !IsFilePickerOpen}">
                Replace Poster
            </Button>
            <Label Content="{Binding Serie.Title}" />
            <Label Content="{Binding Serie.Description}" />
            <Label Content="{Binding Serie.Status}" />
            <ComboBox
                ItemsSource="{Binding Ranks}"
                SelectedItem="{Binding SelectedRank}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button
                IsVisible="{Binding Admin}"
                Command="{Binding UpdateSerie}">
                Update serie infos
            </Button>
        </StackPanel>
        <ScrollViewer
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <ItemsControl
                ItemsSource="{Binding Chapters}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <previews:ChapterPreview
                            Command="{Binding $parent[UserControl].((login:SeriePageViewModel)DataContext).MoveToChapterPage}"
                            CommandParameter="{Binding .}"
                            Chapter="{Binding .}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>