<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:confirmCancel="clr-namespace:ManaxClient.ViewModels.Popup.ConfirmCancel"
    mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
    x:Class="ManaxClient.Views.Popup.ConfirmCancel.UserCreateView"
    x:DataType="confirmCancel:UserCreateViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="16" Margin="16">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
            <TextBlock Text="👤" FontSize="24" VerticalAlignment="Center"/>
            <StackPanel Spacing="4">
                <TextBlock
                    Text="Nouvel utilisateur"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#212529"/>
                <TextBlock
                    Text="Créez un nouveau compte utilisateur pour accéder à Manax"
                    FontSize="12"
                    Foreground="#6C757D"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="8">
            <TextBlock
                Text="Nom d'utilisateur"
                FontWeight="Medium"
                Foreground="#495057"/>
            <TextBox
                Text="{Binding Username}"
                Watermark="Entrez le nom d'utilisateur..."
                Padding="12"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#DEE2E6"
                FontSize="14">
                <TextBox.Styles>
                    <Style Selector="TextBox:pointerover">
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                    </Style>
                    <Style Selector="TextBox:focus">
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                    </Style>
                </TextBox.Styles>
            </TextBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Spacing="8">
            <TextBlock
                Text="Mot de passe"
                FontWeight="Medium"
                Foreground="#495057"/>
            <TextBox
                Text="{Binding Password}"
                Watermark="Entrez le mot de passe..."
                PasswordChar="•"
                Padding="12"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#DEE2E6"
                FontSize="14">
                <TextBox.Styles>
                    <Style Selector="TextBox:pointerover">
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                    </Style>
                    <Style Selector="TextBox:focus">
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                    </Style>
                </TextBox.Styles>
            </TextBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Spacing="8">
            <TextBlock
                Text="Rôle utilisateur"
                FontWeight="Medium"
                Foreground="#495057"/>
            <ComboBox
                Items="{Binding Roles}"
                SelectedItem="{Binding SelectedRole}"
                DisplayMemberBinding="DisplayName"
                HorizontalAlignment="Stretch"
                Padding="12"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#DEE2E6">
                <ComboBox.Styles>
                    <Style Selector="ComboBox:pointerover">
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                    </Style>
                    <Style Selector="ComboBox:focus">
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                    </Style>
                </ComboBox.Styles>
            </ComboBox>
        </StackPanel>

        <Border 
            Grid.Row="4"
            Background="#FFF3CD"
            BorderBrush="#FFC107"
            BorderThickness="1"
            CornerRadius="8"
            Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="⚠️" FontSize="14" VerticalAlignment="Top"/>
                <TextBlock
                    Text="Les administrateurs ont accès à toutes les fonctionnalités de gestion. Choisissez ce rôle avec précaution."
                    TextWrapping="Wrap"
                    FontSize="12"
                    Foreground="#495057"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
