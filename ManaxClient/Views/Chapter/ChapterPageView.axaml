<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:login="clr-namespace:ManaxClient.ViewModels.Chapter"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Chapter.ChapterPageView"
    x:DataType="login:ChapterPageViewModel">
    <Panel>
        <ScrollViewer
            Offset="{Binding ScrollOffset,Mode=TwoWay}"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="Tapped">
                    <InvokeCommandAction Command="{Binding ChangeBordersVisibility}"/>
                </EventTriggerBehavior>
            </Interaction.Behaviors>
            <ItemsControl
                ItemsSource="{Binding Chapter.Pages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Image
                            Stretch="None"
                            Source="{Binding .}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        
        <DockPanel>
            <StackPanel
                DockPanel.Dock="Left"
                IsVisible="{Binding ControlBordersVisible}"
                Orientation="Horizontal"
                VerticalAlignment="Top">
                <Button
                    Command="{Binding Previous}">Back</Button>
            </StackPanel>
        
            <StackPanel
                Background="White"
                DockPanel.Dock="Bottom"
                IsVisible="{Binding ControlBordersVisible}"
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <Button
                    Margin="3"
                    Width="150"
                    HorizontalContentAlignment="Center"
                    Command="{Binding PreviousChapter}">Previous</Button>
                <Button
                    Margin="3"
                    Width="150"
                    HorizontalContentAlignment="Center"
                    Command="{Binding NextChapter}">Next</Button>
            </StackPanel>
            
            <Panel></Panel> 
        </DockPanel>
    </Panel>
</UserControl>