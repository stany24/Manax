<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:login="clr-namespace:ManaxClient.ViewModels.Rank"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Rank.RankPageView"
    x:DataType="login:RankPageViewModel">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="24">
            
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Classes="title" Text="Gestion des rangs"/>
                    <TextBlock Text="{Binding Ranks.Count, StringFormat='🏆 {0} rang(s) configuré(s)'}"
                              Foreground="{StaticResource SecondaryBrush}"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Classes="primary"
                        Command="{Binding CreateRank}"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="➕"/>
                        <TextBlock Text="Nouveau rang"/>
                    </StackPanel>
                </Button>
            </Grid>
            
            <Border Classes="card" IsVisible="{Binding !Ranks.Count}">
                <StackPanel Orientation="Vertical" 
                           Spacing="16" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="🏆" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Aucun rang configuré" 
                              FontSize="18" 
                              FontWeight="Medium"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Créez des rangs pour organiser vos utilisateurs par niveau."
                              TextAlignment="Center"
                              Foreground="{StaticResource SecondaryBrush}"/>
                    <Button Classes="primary"
                            Command="{Binding CreateRank}"
                            HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="➕"/>
                            <TextBlock Text="Créer le premier rang"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
            
            <Border Classes="card" IsVisible="{Binding Ranks.Count}">
                <StackPanel Spacing="16">
                    <TextBlock Classes="subtitle" Text="Liste des rangs"/>
                    
                    <ItemsControl ItemsSource="{Binding Ranks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                       BorderBrush="#E9ECEF"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="16"
                                       Margin="0,4">
                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="16">
                                        
                                        <Border Grid.Column="0"
                                               Background="{StaticResource WarningBrush}"
                                               CornerRadius="20"
                                               Width="40"
                                               Height="40">
                                            <TextBlock Text="🏆"
                                                      FontSize="16"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                      FontWeight="Bold"
                                                      FontSize="16"/>
                                            <TextBlock Text="{Binding Value, StringFormat='Niveau: {0}'}"
                                                      Foreground="{StaticResource SecondaryBrush}"
                                                      FontSize="12"/>
                                        </StackPanel>
                                        
                                        <Border Grid.Column="2"
                                               Background="{StaticResource SuccessBrush}"
                                               CornerRadius="12"
                                               Padding="8,4"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Value}"
                                                      Foreground="White"
                                                      FontSize="12"
                                                      FontWeight="Bold"/>
                                        </Border>
                                        
                                        <Button Grid.Column="3"
                                               Classes="secondary"
                                               Command="{Binding $parent[UserControl].((login:RankPageViewModel)DataContext).UpdateRank}"
                                               CommandParameter="{Binding .}"
                                               Padding="8"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="✏️"/>
                                        </Button>
                                        
                                        <Button Grid.Column="4"
                                               Classes="danger"
                                               Command="{Binding $parent[UserControl].((login:RankPageViewModel)DataContext).DeleteRank}"
                                               CommandParameter="{Binding .}"
                                               Padding="8"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="🗑️"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <Border Classes="card">
                <StackPanel Spacing="16">
                    <TextBlock Classes="subtitle" Text="Configuration des rangs"/>
                    
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="16">
                        <Border Grid.Row="0"
                               Background="#FFF3CD"
                               BorderBrush="#FFEAA7"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="12">
                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="💡" FontSize="16"/>
                                    <TextBlock Text="À propos des rangs" FontWeight="Bold"/>
                                </StackPanel>
                                <TextBlock Text="Les rangs permettent de classer les utilisateurs selon leur niveau ou leur rôle. Plus la valeur est élevée, plus le rang est important."
                                          TextWrapping="Wrap"
                                          FontSize="12"/>
                            </StackPanel>
                        </Border>
                        
                        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="16">
                            <Button Grid.Column="0"
                                    Classes="secondary"
                                    HorizontalAlignment="Stretch"
                                    Padding="16">
                                <StackPanel Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="📊" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Statistiques" HorizontalAlignment="Center" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Grid.Column="1"
                                    Classes="secondary"
                                    HorizontalAlignment="Stretch"
                                    Padding="16">
                                <StackPanel Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="🔄" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Réorganiser" HorizontalAlignment="Center" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>