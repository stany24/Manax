<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:login="clr-namespace:ManaxClient.ViewModels.Home"
    xmlns:previews="clr-namespace:ManaxClient.Controls.Previews"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Home.HomePageView"
    x:DataType="login:HomePageViewModel">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="24">
            
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Classes="title" Text="Bienvenue dans Manax"/>
                    <TextBlock Classes="subtitle" 
                              Text="Découvrez et gérez vos séries préférées"
                              Foreground="{StaticResource SecondaryBrush}"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Classes="primary"
                        Command="{Binding UploadSerie}"
                        Padding="16,12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="📤" FontSize="16"/>
                        <TextBlock Text="Ajouter une série" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </Grid>
            
            <Border Classes="card" IsVisible="{Binding !Series.Count}">
                <StackPanel Orientation="Vertical" 
                           Spacing="16" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="📺" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Aucune série disponible" 
                              FontSize="18" 
                              FontWeight="Medium"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Commencez par ajouter votre première série pour découvrir toutes les fonctionnalités de Manax."
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Foreground="{StaticResource SecondaryBrush}"
                              MaxWidth="400"/>
                    <Button Classes="primary"
                            Command="{Binding UploadSerie}"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="➕"/>
                            <TextBlock Text="Ajouter ma première série"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
            
            <Border Classes="card" IsVisible="{Binding Series.Count}">
                <StackPanel Orientation="Vertical" Spacing="16">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0" 
                                  Classes="subtitle" 
                                  Text="Séries récentes"
                                  Margin="0"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding Series.Count, StringFormat='{}{0} série(s)'}"
                                  Foreground="{StaticResource SecondaryBrush}"
                                  VerticalAlignment="Center"/>
                    </Grid>
                    
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                 VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Series}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent"
                                           Padding="8"
                                           CornerRadius="12"
                                           Margin="4">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="#F8F9FA"/>
                                            </Style>
                                        </Border.Styles>
                                        <previews:SeriePreview
                                            Serie="{Binding .}"
                                            Command="{Binding $parent[UserControl].((login:HomePageViewModel)DataContext).MoveToSeriePage}"
                                            CommandParameter="{Binding .}" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemSpacing="8" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
            
            <Border Classes="card">
                <StackPanel Orientation="Vertical" Spacing="16">
                    <TextBlock Classes="subtitle" Text="Actions rapides"/>
                    
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" 
                          ColumnSpacing="16" RowSpacing="16">
                        
                        <Button Grid.Column="0" Grid.Row="0"
                                Classes="secondary"
                                HorizontalAlignment="Stretch"
                                Padding="16"
                                Command="{Binding UploadSerie}">
                            <StackPanel Orientation="Vertical" Spacing="8">
                                <TextBlock Text="📤" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="Ajouter série" HorizontalAlignment="Center" FontWeight="Medium"/>
                                <TextBlock Text="Importer une nouvelle série" 
                                          HorizontalAlignment="Center" 
                                          FontSize="12"
                                          Foreground="{StaticResource SecondaryBrush}"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Grid.Column="1" Grid.Row="0"
                                Classes="secondary"
                                HorizontalAlignment="Stretch"
                                Padding="16">
                            <StackPanel Orientation="Vertical" Spacing="8">
                                <TextBlock Text="🔍" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="Rechercher" HorizontalAlignment="Center" FontWeight="Medium"/>
                                <TextBlock Text="Trouver vos séries" 
                                          HorizontalAlignment="Center" 
                                          FontSize="12"
                                          Foreground="{StaticResource SecondaryBrush}"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Grid.Column="2" Grid.Row="0"
                                Classes="secondary"
                                HorizontalAlignment="Stretch"
                                Padding="16">
                            <StackPanel Orientation="Vertical" Spacing="8">
                                <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="Statistiques" HorizontalAlignment="Center" FontWeight="Medium"/>
                                <TextBlock Text="Voir vos données" 
                                          HorizontalAlignment="Center" 
                                          FontSize="12"
                                          Foreground="{StaticResource SecondaryBrush}"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>