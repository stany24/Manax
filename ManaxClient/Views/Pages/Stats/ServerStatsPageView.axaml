<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:avalonia="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:previews="clr-namespace:ManaxClient.Controls.Previews"
    xmlns:page="clr-namespace:ManaxClient.ViewModels.Pages.Stats"
    xmlns:viewModels="clr-namespace:ManaxClient.ViewModels"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Pages.Stats.ServerStatsPageView"
    x:DataType="page:ServerStatsPageViewModel"
    IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanReadServerStats}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="24">

            <StackPanel Orientation="Vertical">
                <TextBlock Classes="title" Text="{Binding PageTitle}" />
                <TextBlock Text="{Binding PageSubtitle}"
                           Foreground="{StaticResource SecondaryBrush}" />
            </StackPanel>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="24">
                <Border Grid.Column="0" Classes="card">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ’¾" FontSize="20" />
                            <TextBlock Classes="subtitle" Text="{Binding DiskUsageTitle}" Margin="0" />
                        </StackPanel>

                        <avalonia:PieChart Series="{Binding DiskUsageSeries}"
                                           Width="300"
                                           Height="300"
                                           HorizontalAlignment="Center" />

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="{Binding UsedDiskLabel}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding DiskSizeInGb, StringFormat={}{0:F1} GB}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource ErrorBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="{Binding AvailableDiskLabel}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding AvailableDiskSizeInGb, StringFormat={}{0:F1} GB}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource SuccessBrush}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Classes="card">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ‘¥" FontSize="20" />
                            <TextBlock Classes="subtitle" Text="{Binding UserActivityTitle}" Margin="0" />
                        </StackPanel>

                        <avalonia:PieChart Series="{Binding UserActivitySeries}"
                                           Width="300"
                                           Height="300"
                                           HorizontalAlignment="Center" />

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="{Binding ActiveUsersLabel}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding ServerStats.ActiveUsers}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource InfoBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="{Binding InactiveUsersLabel}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding ServerStats.InactiveUsers}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource SecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="24">
                <Border Grid.Column="0" Classes="card">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ“š" FontSize="20" />
                            <TextBlock Classes="subtitle" Text="{Binding ServerContentTitle}" Margin="0" />
                        </StackPanel>

                        <Grid RowDefinitions="Auto,Auto" RowSpacing="16">
                            <StackPanel Grid.Row="0" Spacing="4" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SeriesLabel}" FontSize="14" FontWeight="Medium" />
                                <TextBlock Text="{Binding ServerStats.Series}"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource PrimaryBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Row="1" Spacing="4" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding ChaptersLabel}" FontSize="14" FontWeight="Medium" />
                                <TextBlock Text="{Binding ServerStats.Chapters}"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource SuccessBrush}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Classes="card">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ“š" FontSize="20" />
                            <TextBlock Classes="subtitle" Text="{Binding LibraryDistributionTitle}" Margin="0" />
                        </StackPanel>

                        <avalonia:PieChart Series="{Binding LibraryDistributionSeries}"
                                           Width="300"
                                           Height="300"
                                           HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>

            <Border Classes="card">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="ðŸš«" FontSize="20" />
                        <TextBlock Classes="subtitle" Text="{Binding NeverReadSeriesTitle}" Margin="0" />
                    </StackPanel>

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding NeverReadSeries}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="16" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <previews:SeriePreview Serie="{Binding}"
                                                           TextColor="{DynamicResource TextColor1}"
                                                           BackGroundColor="{DynamicResource Background1}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>