<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:avalonia="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:page="clr-namespace:ManaxClient.ViewModels.Pages.Stats"
    xmlns:viewModels="clr-namespace:ManaxClient.ViewModels"
    xmlns:localization="clr-namespace:Jeek.Avalonia.Localization;assembly=Jeek.Avalonia.Localization"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Pages.Stats.UserStatsPageView"
    x:DataType="page:UserStatsPageViewModel"
    IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanReadSelfStats}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="24">

            <StackPanel Orientation="Vertical">
                <TextBlock Classes="title" Text="{localization:Localize UserStatsPage.Title}" />
                <TextBlock Text="{localization:Localize UserStatsPage.Subtitle}"
                           Foreground="{StaticResource SecondaryBrush}" />
            </StackPanel>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="24">
                <Border Grid.Column="0" Classes="card">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="📚" FontSize="20" />
                            <TextBlock Classes="subtitle" Text="{localization:Localize UserStatsPage.SeriesProgress.Title}" Margin="0" />
                        </StackPanel>

                        <avalonia:PieChart Series="{Binding SeriesSeries}"
                                           Width="300"
                                           Height="300"
                                           HorizontalAlignment="Center" />

                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="{localization:Localize UserStatsPage.SeriesProgress.Completed}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding UserStats.SeriesCompleted}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource SuccessBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="{localization:Localize UserStatsPage.SeriesProgress.InProgress}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding UserStats.SeriesInProgress}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource InfoBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock Text="{localization:Localize UserStatsPage.SeriesProgress.Remaining}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding UserStats.SeriesRemaining}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource WarningBrush}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Classes="card">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="📖" FontSize="20" />
                            <TextBlock Classes="subtitle" Text="{localization:Localize UserStatsPage.ChaptersProgress.Title}" Margin="0" />
                        </StackPanel>

                        <avalonia:PieChart Series="{Binding ChaptersSeries}"
                                           Width="300"
                                           Height="300"
                                           HorizontalAlignment="Center" />

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="{localization:Localize UserStatsPage.ChaptersProgress.Read}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding UserStats.ChaptersRead}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource SuccessBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="{localization:Localize UserStatsPage.ChaptersProgress.Remaining}" FontSize="12" FontWeight="Medium" />
                                <TextBlock Text="{Binding UserStats.ChaptersRemaining}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource WarningBrush}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Classes="card">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="🏆" FontSize="20" />
                        <TextBlock Classes="subtitle" Text="{localization:Localize UserStatsPage.RankDistribution.Title}" Margin="0" />
                    </StackPanel>

                    <avalonia:CartesianChart Series="{Binding RanksSeries}"
                                             XAxes="{Binding XAxes}"
                                             Width="600"
                                             Height="300"
                                             HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <Border Classes="card">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="📊" FontSize="20" />
                        <TextBlock Classes="subtitle" Text="{localization:Localize UserStatsPage.ReadsPerDay.Title}" Margin="0" />
                    </StackPanel>

                    <avalonia:CartesianChart Series="{Binding ReadsPerDaySeries}"
                                             XAxes="{Binding ReadsXAxes}"
                                             Width="800"
                                             Height="300"
                                             HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>