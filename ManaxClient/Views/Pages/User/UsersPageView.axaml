<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:page="clr-namespace:ManaxClient.ViewModels.Pages.User"
    xmlns:viewModels="clr-namespace:ManaxClient.ViewModels"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Pages.User.UsersPageView"
    x:DataType="page:UsersPageViewModel"
    IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanReadUsers}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="24">

            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Classes="title" Text="Gestion des utilisateurs" />
                    <TextBlock Text="{Binding Users.Count, StringFormat='👥 {0} utilisateur(s) enregistré(s)'}"
                               Foreground="{StaticResource SecondaryBrush}" />
                </StackPanel>

                <Button Grid.Column="1"
                        IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanWriteUsers}"
                        Classes="primary"
                        Command="{Binding CreateUser}"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="➕" />
                        <TextBlock Text="Ajouter" />
                    </StackPanel>
                </Button>
            </Grid>

            <Border Classes="card" IsVisible="{Binding !Users.Count}">
                <StackPanel Orientation="Vertical"
                            Spacing="16"
                            HorizontalAlignment="Center">
                    <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center" />
                    <TextBlock Text="Aucun utilisateur"
                               FontSize="18"
                               FontWeight="Medium"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Commencez par créer votre premier utilisateur."
                               TextAlignment="Center"
                               Foreground="{StaticResource SecondaryBrush}" />
                    <Button Classes="primary"
                            IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanWriteUsers}"
                            Command="{Binding CreateUser}"
                            HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="➕" />
                            <TextBlock Text="Créer un utilisateur" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <Border Classes="card" IsVisible="{Binding Users.Count}">
                <StackPanel Spacing="16">
                    <TextBlock Classes="subtitle" Text="Liste des utilisateurs" />

                    <ItemsControl ItemsSource="{Binding Users}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Background1}"
                                        BorderBrush="{DynamicResource Background2}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,4">
                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="16">

                                        <Border Grid.Column="0"
                                                Background="{StaticResource PrimaryBrush}"
                                                CornerRadius="20"
                                                Width="40"
                                                Height="40">
                                            <TextBlock Text="👤"
                                                       FontSize="18"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>

                                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Username}"
                                                       FontWeight="Bold"
                                                       FontSize="16" />
                                            <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}"
                                                       Foreground="{StaticResource SecondaryBrush}"
                                                       FontSize="12" />
                                        </StackPanel>

                                        <Border Grid.Column="2"
                                                Background="{StaticResource InfoBrush}"
                                                CornerRadius="12"
                                                Padding="8,4"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Role}"
                                                       Foreground="{DynamicResource TextColor1}"
                                                       FontSize="12"
                                                       FontWeight="Medium" />
                                        </Border>

                                        <Button Grid.Column="3"
                                                Classes="secondary"
                                                Padding="8"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="✏️" />
                                        </Button>

                                        <Button Grid.Column="4"
                                                IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanDeleteUsers}"
                                                Classes="danger"
                                                Command="{Binding $parent[UserControl].((page:UsersPageViewModel)DataContext).DeleteUser}"
                                                CommandParameter="{Binding .}"
                                                Padding="8"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="🗑️" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>