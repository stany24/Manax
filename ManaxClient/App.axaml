<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ManaxClient.App"
             xmlns:local="using:ManaxClient"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        
        <Style Selector="Window">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="FontFamily" Value="Segoe UI, Arial, sans-serif"/>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.02)"/>
        </Style>
        
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#005A9E"/>
        </Style>
        
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="Foreground" Value="#495057"/>
        </Style>
        
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#DEE2E6"/>
        </Style>
        
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.danger:pointerover">
            <Setter Property="Background" Value="#C82333"/>
        </Style>
        
        <Style Selector="Button.sidebar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        
        <Style Selector="Button.sidebar:pointerover">
            <Setter Property="Background" Value="#E9ECEF"/>
        </Style>
        
        <Style Selector="Button.sidebar.active">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style Selector="TextBlock.subtitle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
        
        <Style Selector="StackPanel.sidebar">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="MinWidth" Value="240"/>
        </Style>
        
        <Style Selector="Border.task-item">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
        
        <Style Selector="Border.notification">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#6C757D"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#DC3545"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#17A2B8"/>
        <SolidColorBrush x:Key="LightBrush" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="DarkBrush" Color="#343A40"/>
    </Application.Resources>
</Application>