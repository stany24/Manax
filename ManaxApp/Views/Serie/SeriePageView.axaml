<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:login="clr-namespace:ManaxApp.ViewModels.Serie"
    xmlns:controls="clr-namespace:ManaxApp.Controls"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxApp.Views.Serie.SeriePageView"
    x:DataType="login:SeriePageViewModel">
    <DockPanel>
        <StackPanel
            DockPanel.Dock="Top"
            Orientation="Vertical">
            <Image
                Source="{Binding Poster}"
                Width="120"
                Height="194" />
            <Label Content="{Binding Serie.Title}" />
            <Label Content="{Binding Serie.Description}" />
            <Label Content="{Binding Serie.FolderName}" />
            <Label Content="{Binding Serie.Status}" />
            <ComboBox
                ItemsSource="{Binding Ranks}"
                SelectedItem="{Binding SelectedRank}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button
                Command="{Binding UpdateSerie}">Update serie infos</Button>
        </StackPanel>
        <ScrollViewer
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <ItemsControl
                ItemsSource="{Binding Chapters}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:ChapterPreview
                            Command="{Binding $parent[UserControl].((login:SeriePageViewModel)DataContext).MoveToChapterPage}"
                            CommandParameter="{Binding .}"
                            Chapter="{Binding .}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>