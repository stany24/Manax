<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:previews="clr-namespace:ManaxClient.Controls.Previews"
    xmlns:page="clr-namespace:ManaxClient.ViewModels.Pages.Serie"
    xmlns:viewModels="clr-namespace:ManaxClient.ViewModels"
    xmlns:models="clr-namespace:ManaxClient.Models"
    xmlns:localization="clr-namespace:Jeek.Avalonia.Localization;assembly=Jeek.Avalonia.Localization"
    xmlns:localization1="clr-namespace:ManaxClient.Localization"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ManaxClient.Views.Pages.Serie.SeriePageView"
    x:DataType="page:SeriePageViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="24">

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="24">
                <Border Grid.Column="0" Classes="card" Padding="16">
                    <StackPanel Spacing="16" Width="180">
                        <Border CornerRadius="12" ClipToBounds="True">
                            <Image Source="{Binding Serie.Poster}"
                                   Width="150"
                                   Height="243"
                                   Stretch="UniformToFill" />
                        </Border>

                        <StackPanel
                            Orientation="Horizontal">
                            <Button Classes="secondary"
                                    IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanWriteSeries}"
                                    Command="{Binding ReplacePoster}"
                                    IsEnabled="{Binding !IsFilePickerOpen}"
                                    HorizontalAlignment="Stretch">
                                <TextBlock Text="ðŸ–¼ï¸" />
                            </Button>

                            <Button Classes="secondary"
                                    IsVisible="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).CanWriteSeries}"
                                    Command="{Binding UpdateSerie}"
                                    IsEnabled="{Binding !IsFilePickerOpen}"
                                    HorizontalAlignment="Stretch">
                                <TextBlock Text="{localization:Localize SeriePage.ChangeButton}" />
                            </Button>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="{localization:Localize SeriePage.SerieRating}" FontWeight="Medium" />
                            <ComboBox ItemsSource="{Binding Ranks}"
                                      SelectedItem="{Binding SelectedRank}"
                                      HorizontalAlignment="Stretch">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="models:Rank">
                                        <TextBlock Text="{Binding Name}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16">
                            <StackPanel Grid.Column="0" Spacing="8">
                                <Border Background="{StaticResource InfoBrush}"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Serie.Status}"
                                               Foreground="{DynamicResource TextColor1}"
                                               FontSize="12"
                                               FontWeight="Medium" />
                                </Border>

                                <TextBlock Text="{localization1:LocalizeFormat SeriePage.ChapterCount,
                                               Param1={Binding $parent[UserControl].((page:SeriePageViewModel)DataContext).Serie.Chapters.Count}}"
                                           Foreground="{StaticResource SecondaryBrush}" />
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" Spacing="20">
                    <TextBlock Classes="title" Text="{Binding Serie.Title}" />

                    <Border Classes="card">
                        <TextBlock Text="{Binding Serie.Description}"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextColor1}" />
                    </Border>

                    <Border Classes="card">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="subtitle" Text="{localization:Localize SeriePage.Chapters}" Margin="0" />

                            <Border Background="{DynamicResource Background2}"
                                    CornerRadius="8"
                                    Padding="12"
                                    IsVisible="{Binding !Serie.Chapters.Count}">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ“–" FontSize="32" />
                                    <TextBlock Text="{localization:Localize SeriePage.NoChaptersAvailable}"
                                               FontWeight="Medium" />
                                    <TextBlock Text="{localization:Localize SeriePage.NoChaptersDescription}"
                                               FontSize="12"
                                               Foreground="{StaticResource SecondaryBrush}" />
                                </StackPanel>
                            </Border>

                            <ItemsControl ItemsSource="{Binding Serie.Chapters}"
                                          IsVisible="{Binding Serie.Chapters.Count}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                                Padding="8"
                                                CornerRadius="8"
                                                Margin="0,2">
                                            <Border.Styles>
                                                <Style Selector="Border:pointerover">
                                                    <Setter Property="Background" Value="{DynamicResource Background1}" />
                                                </Style>
                                            </Border.Styles>
                                            <previews:ChapterPreview
                                                Command="{Binding $parent[UserControl].((page:SeriePageViewModel)DataContext).MoveToChapterPage}"
                                                CommandParameter="{Binding .}"
                                                Chapter="{Binding .}"
                                                InfoEmittedCommand="{Binding $parent[UserControl].((page:SeriePageViewModel)DataContext).InfoEmittedCommand}"
                                                PopupRequestedCommand="{Binding $parent[UserControl].((page:SeriePageViewModel)DataContext).PopupRequestedCommand}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" Spacing="4" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>