<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:content="clr-namespace:ManaxClient.ViewModels.Popup.ConfirmCancel.Content"
    xmlns:localization="clr-namespace:Jeek.Avalonia.Localization;assembly=Jeek.Avalonia.Localization"
    mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
    x:Class="ManaxClient.Views.Popup.ConfirmCancel.Content.UserCreateView"
    x:DataType="content:UserCreateViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="16" Margin="16">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
            <TextBlock Text="👤" FontSize="24" VerticalAlignment="Center" />
            <StackPanel Spacing="4">
                <TextBlock
                    Text="{localization:Localize UserCreatePopup.Title}"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#212529" />
                <TextBlock
                    Text="{localization:Localize UserCreatePopup.Description}"
                    FontSize="12"
                    Foreground="#6C757D" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="8">
            <TextBlock
                Text="{localization:Localize UserCreatePopup.Username}"
                FontWeight="Medium"
                Foreground="#495057" />
            <TextBox
                Text="{Binding Username}"
                Watermark="{localization:Localize UserCreatePopup.Username.Placeholder}"
                Padding="12"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#DEE2E6"
                FontSize="14">
                <TextBox.Styles>
                    <Style Selector="TextBox:pointerover">
                        <Setter Property="BorderBrush" Value="#007ACC" />
                    </Style>
                    <Style Selector="TextBox:focus">
                        <Setter Property="BorderBrush" Value="#007ACC" />
                    </Style>
                </TextBox.Styles>
            </TextBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Spacing="8">
            <TextBlock
                Text="{localization:Localize UserCreatePopup.Password}"
                FontWeight="Medium"
                Foreground="#495057" />
            <TextBox
                Text="{Binding Password}"
                Watermark="{localization:Localize UserCreatePopup.Password.Placeholder}"
                PasswordChar="•"
                Padding="12"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#DEE2E6"
                FontSize="14">
                <TextBox.Styles>
                    <Style Selector="TextBox:pointerover">
                        <Setter Property="BorderBrush" Value="#007ACC" />
                    </Style>
                    <Style Selector="TextBox:focus">
                        <Setter Property="BorderBrush" Value="#007ACC" />
                    </Style>
                </TextBox.Styles>
            </TextBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Spacing="8">
            <TextBlock
                Text="{localization:Localize UserCreatePopup.Role}"
                FontWeight="Medium"
                Foreground="#495057" />
            <ComboBox
                ItemsSource="{Binding Roles}"
                SelectedItem="{Binding SelectedRole}"
                HorizontalAlignment="Stretch"
                Padding="12"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#DEE2E6">
                <ComboBox.Styles>
                    <Style Selector="ComboBox:pointerover">
                        <Setter Property="BorderBrush" Value="#007ACC" />
                    </Style>
                    <Style Selector="ComboBox:focus">
                        <Setter Property="BorderBrush" Value="#007ACC" />
                    </Style>
                </ComboBox.Styles>
            </ComboBox>
        </StackPanel>

        <Border
            Grid.Row="4"
            Background="#FFF3CD"
            BorderBrush="#FFC107"
            BorderThickness="1"
            CornerRadius="8"
            Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="⚠️" FontSize="14" VerticalAlignment="Top" />
                <TextBlock
                    Text="{localization:Localize UserCreatePopup.Tip}"
                    TextWrapping="Wrap"
                    FontSize="12"
                    Foreground="#495057" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>